{
  "name": "plain-public-tui",
  "version": "0.0.1",
  "description": "TUI for using your favorite customer support tool - Plain",
  "type": "module",
  "scripts": {
    "dev:og": "tsx src/index.ts",
    "dev": "vite-node -w src/index.tsx",
    "build": "tsc",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "lint:fix": "biome lint --write",
    "format:fix": "biome format --write"
  },
  "keywords": [
    "Plain",
    "ink",
    "Customer Support",
    "tui"
  ],
  "author": "ndom91 <yo@ndo.dev>",
  "license": "MIT",
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "@inkjs/ui": "^2.0.0",
    "@tanstack/react-query": "^5.87.4",
    "@types/react": "^19.1.12",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "graphql-tag": "^2.12.6",
    "ink": "^6.3.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@graphql-codegen/cli": "^5.0.4",
    "@graphql-codegen/typescript": "^4.1.3",
    "@graphql-codegen/typescript-operations": "^4.3.0",
    "@types/node": "^24.3.1",
    "@vitejs/plugin-react": "^5.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vite-node": "^3.2.4"
  }
}
